[Unit]
Description=WorkoutLog (Docker Compose)
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/workout-log/deploy
ExecStart=/opt/workout-log/deploy/scripts/restart_workoutlog.sh
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
